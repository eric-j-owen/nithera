---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImg from "../assets/homepage-brain.png";
import aboutImg from "../assets/neural-web.png";
---

<Layout title="Home">
  <main>
    <section class="hero">
      <div class="hero-content">
        <!-- <p>Breakthrough Science for a Better Tomorrow.</p> -->
        <h2>
          Helping Patients Suffering from Neurological Disorders by Developing
          More Efficacious Drugs
        </h2>
        <a href="/about" class="btn btn-primary">Learn More</a>
      </div>
      <Image src={heroImg} alt="" class="img hero-img" />
    </section>

    <section class="about">
      <Image src={aboutImg} alt="" class="img aboutImg" />
      <div class="about-content">
        <h2>Where Innovation Meets Patient Care.</h2>
        <p>
          At NeuroImpact Therapeutics, we are dedicated to transforming the
          lives of patients suffering from neurological disorders
        </p>
        <a href="/about" class="btn btn-primary">Learn More About Our Mission</a
        >
      </div>
    </section>
    <div class="wrapper">
      <section class="news">
        <h2>Stay informed with our latest updates and announcements.</h2>
        <div class="news"></div>
        <a href="/news" class="btn btn-primary">View All News</a>
      </section>

      <section class="contact">
        <h2>Have questions or want to get involved? Reach out today.</h2>
        <div class="contact-links">
          <a href="/contact" class="btn btn-primary">Contact Us</a>
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  .wrapper {
    display: flex;
    flex-wrap: wrap;
    margin-block-end: 100px;
    text-align: center;
    justify-content: center;
  }

  main {
    padding-inline: 50px;
  }

  .hero,
  .about {
    /* min-height: 100vh; */
    margin-block: 300px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .img {
    width: 100%;
    max-width: 500px;
    height: auto;
  }

  h2 {
    font-size: clamp(2rem, 2.5vw, 3rem);
    max-width: 26ch;
  }

  p {
    max-width: 50ch;
  }

  .hero-content > h2 {
    margin-block-end: 35px;
  }

  .btn-primary {
    position: relative;
    padding: 15px;
  }

  .btn-primary::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 12px;
    padding: 2px;
    background: linear-gradient(
      to right,
      var(--content-gradient-start),
      var(--content-gradient-end)
    );

    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask-composite: exclude;
    pointer-events: none;
  }

  /* about section */
  .about {
    position: relative;
    z-index: 1;
  }

  .aboutImg {
    max-width: 1000px;
    position: absolute;
    left: -15%;
    top: 50%;
    transform: translateY(-50%);
    z-index: -1;
  }

  .about-content {
    margin-left: auto;
  }
  .about-content > * {
    margin-block-end: 25px;
  }

  .contact > *,
  .news {
    margin: 30px;
  }

  @media (max-width: 1030px) {
    .hero {
      justify-content: center;
      gap: 90px;
    }

    .hero-content {
      text-align: center;
    }

    h2 {
      max-width: 35ch;
    }

    .about {
    }

    .about-content {
      display: flex;
      flex-direction: column;
      margin: 0 auto;
      text-align: center;
      align-items: center;
    }

    .aboutImg {
      left: 50%;
      top: 50%;
      transform: translateY(-50%);
      transform: translateX(-50%);
      min-width: 700px;
    }
  }
</style>
