---
import Image from "astro/components/Image.astro";
import heroImg from "../assets/bg-molecules.webp";

type Props = {
  heading: string;
  subHeading?: string;
};

const { heading, subHeading } = Astro.props;
---

<div>
  <Image src={heroImg} alt="" />
  <h1>{heading}</h1>
  {subHeading && <h2>{subHeading}</h2>}
</div>

<style>
  div {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 24px;
    min-height: 20vh;
    margin-block-end: 50px;
  }

  div img {
    position: absolute;
    width: 500px;
    height: auto;
    left: 0;
    z-index: 0;
  }

  h1 {
    position: relative;
    width: fit-content;
    margin-block-start: -50px;
  }

  h1::after {
    content: "";
    background: linear-gradient(
      to right,
      var(--clr-gradient-start),
      var(--clr-gradient-end)
    );
    width: 100%;
    height: 2px;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
  }

  h2 {
    font-size: clamp(1rem, 1.5vw, 1.5rem);
    max-width: 75ch;
    text-align: center;
  }
</style>
